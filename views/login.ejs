<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <link href="style.css" rel="style">
</head>

<body class="bg-gray-800">


    <div class="mx-auto container flex items-center" id="nav">
        <div class="w-full pt-2 p-4">

            <div class="mx-auto md:p-6 md:w-1/2 md:mt-20">
                <div class="flex flex-wrap justify-between mb-5">
                    <h1 class="text-2xl text-white text-center">
                        Login
                    </h1>
                </div>

                <div class="bg-gray-900 shadow-md rounded px-8 pt-6 pb-8 mb-4">
                    <form class="form-login" method="post" action="/login">
                        <div class="mb-8">
                            <div class="mt-1 relative rounded-md shadow-sm">
                                <input id="email" type="email" class="block text-white pr-10 shadow appearance-none border-2
                                border-blue-500 rounded w-full py-2 px-4 mb-3 leading-tight focus:outline-none
                                bg-gray-600 transition duration-500 ease-in-out" name="email" placeholder="Email ID" />
                            </div>
                        </div>

                        <div class="mb-8">
                            <div class="mt-1 relative rounded-md shadow-sm">
                                <input id="password" type="password"
                                    class="block text-white pr-10 shadow appearance-none border-2 border-blue-500 rounded w-full py-2 px-4 mb-3 leading-tight focus:outline-none bg-gray-600 transition duration-500 ease-in-out"
                                    name="password" placeholder="Password" />
                            </div>
                        </div>
                        <div class="mb-4 text-center">
                            <button
                                class="transition duration-500 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                                type="submit">
                                Submit
                            </button>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>


</body>

</html>